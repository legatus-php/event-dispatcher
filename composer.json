{
    "name": "legatus/event-dispatcher",
    "description": "A simple PSR-14 implementation",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Matias Navarro Carter",
            "email": "contact@mnavarro.dev"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Legatus\\Support\\": ["src/event-dispatcher", "src/listener-factory"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Legatus\\Support\\": ["tests"]
        }
    },
    "require": {
        "php": ">=7.4",
        "psr/event-dispatcher": "^1.0",
        "psr/log": "^1.1",
        "doctrine/annotations": "^1.11"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "friendsofphp/php-cs-fixer": "^2.16",
        "vimeo/psalm": "^3.7",
        "infection/infection": "^0.16.4"
    },
    "scripts": {
        "lint": "php-cs-fixer fix --ansi",
        "pr": [
            "php-cs-fixer fix --dry-run -vvv",
            "psalm --no-cache --stats",
            "XDEBUG_MODE=coverage phpunit --testdox --coverage-text"
        ]
    }
}
